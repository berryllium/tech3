
{% if isAdmin %}
<h3 class="text-center">Вход выполнен</h3>
{% else %}
<h3 class="text-center">Вход в систему</h3>
<div class="login-form">
    <form method="post" action="?act=login">
      <label for="login">Логин: </label><input type="text" name="login" id="login" /><br />
      <label for="pass">Пароль: </label><input type="password" name="pass" id="pass" /><br />
      <input type="submit" name="submit" value="Войти" />
    </form>
  </div>
{% endif %}

